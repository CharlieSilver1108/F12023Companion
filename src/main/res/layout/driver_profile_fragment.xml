<?xml version="1.0" encoding="utf-8"?>
<!-- Used by DriverProfileFragment -->

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drivers.DriverProfileFragment">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constraintLayout">

            <TextView
                android:id="@+id/homeTitle"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Profile"
                android:textColor="@color/f1"
                android:textSize="40sp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/homeImage" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/homeDesc"
                android:text="Everything about the driver"
                android:textSize="14sp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeTitle"
                app:layout_constraintEnd_toStartOf="@+id/homeImage" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:id="@+id/homeImage"
                android:src="@drawable/f1_logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toEndOf="@+id/homeTitle"
                android:contentDescription="F1 Logo" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/row1"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeImage"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/driversCard"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardElevation="20dp"
                    app:cardCornerRadius="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/driverName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Driver Name"
                            android:textColor="@color/f1"
                            android:textSize="20sp"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="40dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/driverImage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/driverTeam"
                            android:text="Team:"
                            android:textSize="14sp"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/driverName"
                            app:layout_constraintEnd_toStartOf="@+id/driverImage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/driverAge"
                            android:text="Age:"
                            android:textSize="14sp"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/driverTeam"
                            app:layout_constraintEnd_toStartOf="@+id/driverImage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/driverNationality"
                            android:text="Nationality:"
                            android:textSize="14sp"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/driverAge"
                            app:layout_constraintEnd_toStartOf="@+id/driverImage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/driverNumber"
                            android:text="Driver Number:"
                            android:textSize="14sp"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/driverNationality"
                            app:layout_constraintEnd_toStartOf="@+id/driverImage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/driverPoints"
                            android:text="WDC Points:"
                            android:textSize="14sp"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/driverNumber"
                            app:layout_constraintEnd_toStartOf="@+id/driverImage" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/driverPosition"
                            android:text="WDC Position:"
                            android:textSize="14sp"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/driverPoints"
                            app:layout_constraintEnd_toStartOf="@+id/driverImage" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="140dp"
                            android:id="@+id/driverImage"
                            android:src="@drawable/verstappen"
                            app:layout_constraintTop_toTopOf="@id/driverName"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="2dp"
                            app:layout_constraintStart_toEndOf="@+id/driverName"
                            android:contentDescription="F1 Logo" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/driverBio"
                            android:text="Bio:"
                            android:textSize="14sp"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/driverPosition"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>